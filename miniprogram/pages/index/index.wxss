/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  height:100%;
  flex-direction: column;
  justify-content: flex-start;
}
.container{
  flex:1;
  display:flex;
  color:#444;
}
.inline{
  display:inline-block;
  white-space:nowrap;
  line-height:30px;
  font-size:16px;
  font-weight:bold;
  padding:0 12px;
}
.active{
  color:forestgreen;
}
.swiper{
  flex:1;
  width:100%;
}
.swiper__item{
  padding:12px;
  box-sizing:border-box;
  overflow:auto;
}
.swiper__box{
  margin:0 -10rpx;
  overflow:hidden;
}
.swiper__box__item{
  float:left;
  width:220rpx;
  padding:10rpx;
}
.swiper__img__tit{
  font-size:30rpx;
}
.swiper__img__num{
  font-size:30rpx;
  color:#666;
}